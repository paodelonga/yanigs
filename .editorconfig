# My editorconfig config
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespaces = true
indent_style = space
indent_size = 2


[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2
